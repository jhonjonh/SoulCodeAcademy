<section class="container">
    <section class="row">
        <section class="col">
            <section class="row mt-5 mb-5">
                <article class="col-6 text-left">
                    <h1 class="">LISTA DE FORNECEDORES</h1>
                </article>
                <article class="col-6 text-right">
                    <a href="/fornecedor/add " class="btn btn-success btn-lg">CADASTRAR FORNECEDOR</a>
                </article>
            </section>
            <table id="tabelaLivrosAdmin"  class="text-center table table-hover table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>NOME</th>
                        <th>CNPJ</th>
                        <th>EDITAR</th>
                        <th>DELETAR</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (fornecedor_lista.length==0) { %>
                        <div class="alert alert-warning"> NÃ£o existem dados cadastrados.</div>
                    <% } else {%>
                    <% fornecedor_lista.forEach(function(objeto){ %>
                        <tr>
                            <td><%=objeto.forn_id %></td>
                            <td><%=objeto.forn_nome %></td>
                            <td><%=objeto.forn_cnpj %></td>
                            <td><a href="/fornecedor/editar/<%=objeto.forn_id %>" class="btn btn-warning bt-sm">EDITAR</a></td>
                            <td><a href="/fornecedor/drop/<%=objeto.forn_id %>" class="btn btn-danger bt-sm">DELETAR</a></td>
                        </tr>
                    <% }) %>
                    <% } %>
                </tbody>
            </table>
        </section>
    </section>
</section>