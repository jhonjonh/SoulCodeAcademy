<section class="container">
    <section class="row">
        <article class="col">
            <h1 class="mt-5 text-center">CADASTRO DE ENTRADAS</h1>
            <form action="add" method="POST">
                <article>
                    <label for="produtos">PRODUTO</label>
                    <% if (lista.length==0) { %>
                        <div class="alert alert-warning"> Não existem produtos cadastrados.</div>
                        <% } else {%>
                            <select name="produto" id="produto" class="form-control">
                                <% lista.forEach(function(objeto){ %>
                                    <option value="<%= objeto.estoque_id %>">
                                        <%= objeto.estoque_nome %>
                                    </option>
                                    <% }) %>
                            </select>
                            <% } %>
                </article>
                <article>
                    <label for="fornecedor">FORNECEDOR</label>
                    <% if (listaFornecedor.length==0) { %>
                        <div class="alert alert-warning"> Não existem fornecedores cadastrados.</div>
                        <% } else {%>
                            <select name="fornecedor" id="fornecedor" class="form-control">
                                <% listaFornecedor.forEach(function(objeto){ %>
                                    <option value="<%= objeto.forn_id %>">
                                        <%= objeto.forn_nome %>
                                    </option>
                                    <% }) %>
                            </select>
                            <% } %>
                </article>
                <article class="form-group">
                    <label for="quant">QUANTIDADE</label>
                    <input class="form-control" type="number" id="quant" name="quant" placeholder="0000" required>
                </article>
                <button id="submit" type="submit" class="mb-5 btn btn-primary">Enviar</button>
            </form>
        </article>
    </section>
</section>