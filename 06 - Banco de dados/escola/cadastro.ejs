                <h3 class="display-3 mt-5">Cadastro</h3>
            </article>
        </section>
        <form action="" method="POST">
            <article class="form-group form-row">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" name="nome">
            </article>
            <article class="form-group form-row">
                <label for="cpf">CPF</label>
                <input type="number" class="form-control" id="cpf" name="cpf">
            </article>
            <article class="form-group form-row">
                <label for="idade">Idade</label>
                <input type="number" class="form-control" id="idade" name="idade">
            </article>
            <article class="form-group form-row">
                <label for="materia">Materia</label>
                <input type="text" class="form-control" id="materia" name="materia">
            </article>
            <article class="form-group form-row">
                <article class="col-2 mx-auto">
                    <label class="form-check-label" for="pcd">PCD</label>
                    <select class="custom-select" name="pcd" id="pcd">
                        <option value="true">Sim</option>
                        <option value="false">NÃ£o</option>
                    </select>
                </article>
                <article class="col-2 mx-auto">
                    <button type="submit" class="btn btn-outline-dark">Enviar</button>
                </article>
            </article>
        </form>
    </section>


