<section>
    <h2 class="display-3 text-center">Cadastro</h2>
</section>
    <section class="container">
        <% if(erros){
            erros.forEach(function(erros){ %>
            <article class="alert alert-danger"><%= erros.texto %></article>
        <% })} %>
    </section>
    <section class="container">
        <% if(error_msg) { %>
        <article class="alert alert-danger mt-2">
            <%= error_msg %>
        </article>  
        <% } %>
    </section>
    <section class="card container mt-5">
        <article class="card-body">
            <form action="" method="post">
                <label for="nome">Nome</label>
                <input type="text" id="nome" name="nome" class="form-control" required>
                <label for="senha">Senha</label>
                <input type="password" id="senha" name="senha" class="form-control" required>
                <label for="senha2">Confirmar senha</label>
                <input type="password" id="senha2" name="senha2" class="form-control" required>
                <label for="categoria">Tipo de cadastro: </label>
                <select name="categoria" id="categoria" class="form-control" required>
                    <option value="user">Usu√°rio</option>
                    <option value="adm">Admnistrador</option>
                </select>
                <button type="submit" class="btn btn-success mt-4">Cadastrar</button>
            </form>
        </article>
    </section>
