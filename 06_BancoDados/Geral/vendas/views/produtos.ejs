<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <title>Lista de produtos</title>
</head>
<body>
    <section class="container">
        <section class="row">
            <section class="col">
                <section class="row mt-5">
                    <article class="col-6">
                        <h1>Lista de produtos</h1>
                    </article>
                    <article class="col-6">
                        <a href="/cadastrarProdutos" class="btn btn-primary">Inserir produto</a>
                    </article>
                </section>
                <table class="table table-hover table-bordered table-striped table-danger">
                    <thead>
                        <tr>
                            <th>NOME</th>
                            <th>VALOR</th>
                            <th>CÃ“DIGO</th>
                            <th>DELETAR</th>
                            <th>EDITAR</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% catalogoProdutos.forEach(function(objeto){ %>   
                            <tr>
                                <td><%= objeto.nome %></td>
                                <td><%= objeto.vlUnit %></td>
                                <td><%= objeto.codigoBarras %></td>
                                <td><a href="/deletarProduto/<%= objeto._id %>" class="btn btn-warning">apagar</a></td>
                                <td><a href="/editarProduto/<%= objeto._id %>" class="btn btn-success">editar</a></td>
                            </tr>
                        <% }) %>
                        <% if(catalogoProdutos == 0) { %>
                            <tr>
                                <td colspan="5" class="alert alert-warning text-center"> NENHUM PRODUTO CADASTRADO </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </section>
        </section>
    </section>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <!-- Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <!-- Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>