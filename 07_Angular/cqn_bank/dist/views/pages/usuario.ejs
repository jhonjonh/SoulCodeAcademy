<section class="container text-center">
    <p class="text-center">Olá <%= userInfo.nome %> seja bem vindo!</p>
    <p class="text-center">Agência <%= userInfo.idBank.substring(1, 4) %></p>
    <p class="text-center">Conta: <%= userInfo.idBank.substring(5, userInfo.idBank.length) %></p>
    <p class="text-center">Saldo: R$ <%= userInfo.saldo %></p>
    <p class="text-center">CPF: <%= userInfo.cpf %></p>
    
    
    <form action="user/deposito" method="POST">
        
        <label for="valorDeposito">VALOR A SER DEPOSITADO R$:</label>
        <input class="form-control" type="number" name="valorDeposito" id="valorDeposito">
        <button class="btn btn-success mt-2 mb-2 text-center">DEPOSITAR</button>
        
    </form>
    
    <form action="user/saque" method="POST">
    
        <label for="valorSaque">VALOR A SER SACADO R$:</label>
        <input class="form-control" type="number" name="valorSaque" id="valorSaque">
        <button class="btn btn-success mt-2 mb-2 text-center">SACAR</button>

    </form>
    
    <form action="user/transferir" method="POST">
    
        <label for="valorTranferir">VALOR A SER DEPOSITADO R$:</label>
        <input class="form-control" type="number" name="valorTranferir" id="valorTranferir">
        <label for="contaTransferir">INFORME O CPF DO RECEPTOR</label>
        <input class="form-control" type="number" name="contaTransferir" id="contaTransferir">
        
        <button class="btn btn-success mt-2 mb-2 text-center">TRANSFERIR</button>

    </form>

</section>